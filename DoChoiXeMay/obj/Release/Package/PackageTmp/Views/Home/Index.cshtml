            @*<a href="#" target="_blank" class="social">
                    <i class="fa fa-vimeo-square"></i>
                </a>*@
            <!-- Youtube -->
            <a href="https://www.youtube.com/%40Tek_Official_311" title="Youtube" target="_blank" class="social">
                <i class="fa fa-youtube"></i>
            </a>
            <a href="https://forms.gle/zBEaAtmrxebTeyfj6" title="Instagram" class="social">
