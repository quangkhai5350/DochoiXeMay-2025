        <!-- Adress, Mail -->
        <div class="address socials animated" data-animation="fadeInRight" data-animation-delay="500">
            <!-- Phone Number, Mail -->
            <p>Phone:<span class="colored"> 0832 886163 </span> Email : <a href="mailto:tek.sale.net@gmail.com" class="colored">tek.sale.net@gmail.com</a></p>
