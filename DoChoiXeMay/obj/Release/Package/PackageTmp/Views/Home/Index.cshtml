            <a href="https://www.facebook.com/Tekzone.trannguyen" title="Facebook" target="_blank" class="social">
                <i class="fa fa-facebook"></i>
            </a>
            <!-- Tiktok -->
            <a href="https://www.tiktok.com/%40sale.tek.official" title="Tiktok" target="_blank" class="social">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tiktok" viewBox="0 0 16 16">
